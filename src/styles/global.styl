*
  font-family 'Avenir', Helvetica, Arial, sans-serif

mark
  background $mark-color

.tutorial
  &__title
    margin 0 0 24px 0
    
    h1
      font-size $font-title
      font-weight 100
      color $green
      margin 0

  &__body
    max-width 768px

    &__lead
      padding 15px 20px
      background $white-smoke
      border-radius 8px
      box-shadow 4px 3px 20px 1px rgba(136, 136, 136, 0.27)

    h3
      font-weight 100
      font-size $font-subtitle

    p
      font-size $font-text
      line-height 1.8
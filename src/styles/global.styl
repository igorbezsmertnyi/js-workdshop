*
  font-family 'Avenir', Helvetica, Arial, sans-serif

mark
  background $mark-color

.tutorial
  &__title
    margin 0 0 24px 0
    
    h1
      font-size $font-title
      font-weight 100
      color $green
      margin 0

  &__gist
    margin 0 -8px

    a
      display none

  &__table
    &__2
    &__3
    &__4
    &__6
      th
        padding 8px 16px
        text-align left 
        background transparentize($blue, .2)

    &__2
      th
        width 50%
    
    &__3
      th
        width 33.3%

    &__4
      th
        width 25%

    &__6
      th
        width calc(100% / 6)

  &__body
    width 100%

    &__lead
      padding 15px 20px
      background $white-smoke
      border-radius 8px
      box-shadow 4px 3px 20px 1px rgba(136, 136, 136, 0.27)

    h3
      font-weight 100
      font-size $font-subtitle

    p
      font-size $font-text
      line-height 1.8
    
    ul
      list-style: none
      padding 0
      margin 40px 0 0
    
    li
      position relative
      padding 12px 0
      font-size $font-list

      &::before
        content 'â€¢'
        color $blue
        margin-right 10px
    
    table
      width 100%
      margin 20px 0
      border 1px solid $blue

      td
        padding 8px 16px

      tr
        &:nth-child(even)
          background transparentize($blue, .1)
